= form_for @journey do |f|
  -if @journey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@journey.errors.count, "error")} prohibited this journey from being saved:"
      %ul
        - @journey.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :travel_time
    = f.datetime_select :travel_stamp
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :direction
    = f.select :direction, options_for_select([["from airport","from"], ["to airport", "to"]]), :selected => f.object.direction
  .actions
    = f.submit 'Save'
